<?xml version="1.0"?>
<config>
	<sections>
		<sales>
			<groups>
				<minimum_order>
					<fields>
						<minimumfee translate="label">
							<label>Minimum Order Fee</label>
							<frontend_type>text</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</minimumfee>
						<feecalculation translate="label">
							<label>Fee calculation</label>
							<frontend_type>select</frontend_type>
							<source_model>minimumorderfee/value</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</feecalculation>
						<subtotalcalculation translate="label">
							<label>Minimum order fee calculation</label>
							<frontend_type>select</frontend_type>
							<source_model>minimumorderfee/calculation</source_model>
							<comment>Minimum fee calculation based on</comment>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</subtotalcalculation>
						<details translate="label">
							<label>Text to display in checkout page</label>
							<frontend_type>textarea</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</details>
					</fields>
				</minimum_order>
			</groups>
		</sales>
	</sections>
</config>
